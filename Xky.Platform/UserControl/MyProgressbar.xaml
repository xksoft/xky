<UserControl x:Class="Xky.Platform.UserControl.MyProgressbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xky.Platform.UserControl"
             x:Name="uc"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Border Background="{Binding TrackBrush, RelativeSource={RelativeSource AncestorType=UserControl}}" CornerRadius="2">
        <Border BorderBrush="{Binding BorderBrush}" BorderThickness="{Binding BorderThickness}" CornerRadius="2" >
            <!--<Border.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="0" Color="#000"/>
            </Border.Effect>-->
            <Border Margin="1" Width="{Binding ProgressBarWidth, ElementName=uc}" CornerRadius="2"  HorizontalAlignment="Left"  Background="{Binding FForeground, RelativeSource={RelativeSource AncestorType=UserControl}}">
            </Border>
        </Border>
     </Border>

</UserControl>
